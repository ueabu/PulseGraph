    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "FastAPI Dev (uv)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/fastapi",
            "args": [
                "dev",
                "api/main.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv"
            },
            "jinja": true
        }
    ]
}